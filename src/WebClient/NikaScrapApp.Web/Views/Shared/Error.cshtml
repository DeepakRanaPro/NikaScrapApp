@model ErrorViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Error</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1 class="mt-5">An Error Occurred</h1>
        <p class="lead">Sorry, an unexpected error has occurred. Please try again later.</p>

        <h3>Details:</h3>
        <p><strong>Controller:</strong> @Model.ControllerName</p>
        <p><strong>Action:</strong> @Model.ActionName</p>
        <p><strong>Request URL:</strong> @Model.RequestUrl</p>
        <p><strong>Request ID:</strong> @Model.RequestId</p>

        @if (Model.Exception != null)
        {
            <h3>Exception Details:</h3>
            <p><strong>Message:</strong> @Model.Exception.Message</p>
            <p><strong>Stack Trace:</strong></p>
            <pre>@Model.Exception.StackTrace</pre>
        }
    </div>
</body>
</html>
